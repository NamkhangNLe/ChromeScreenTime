{
  "manifest_version": 3,
  "name": "Chrome Screen Time",
  "icons": {
    "32": "icon32.png"
  },
  "version": "1.0",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": { 
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}